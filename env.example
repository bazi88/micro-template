# cp env.example .env

# Database Configuration
# Chọn loại database bằng cách đặt DB_TYPE:
# - Dùng PostgreSQL: DB_TYPE=postgres
# - Dùng MongoDB: DB_TYPE=mongodb
# - Dùng MySQL: DB_TYPE=mysql
DB_TYPE=postgres

# PostgreSQL Configuration (khi DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mydb
DB_USER=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable

# MongoDB Configuration (khi DB_TYPE=mongodb)
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=mydb

# Redis Configuration (Cache Layer)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
API_PORT=3080
API_HOST=localhost

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_SERVICE_NAME=micro-service
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRATION=24h

# Logging
LOG_LEVEL=debug  # debug, info, warn, error
LOG_FORMAT=json  # json, text